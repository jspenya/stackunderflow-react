<div class="container">
	<div class="row ">
		<div class="col-sm-3 ">
			<h2>
				<%= @post.title %>
			</h2>

			<%= simple_format @post.body %>
			This post has <%= @post.comments.count %> comments. 
			<br />
			<%= link_to 'Edit', edit_post_path(@post) %> |
			<%= link_to 'Back', posts_path %>

		</div>
	</div>
</div>