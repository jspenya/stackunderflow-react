.indexp
  .container
    .row
      .col-md-12.box.mt
        .row
          .col-md.12.mt-0
            %post_by_show 
              #{@post.user.username} posted on #{@post.created_at.strftime("%B %d %Y, %l:%M%P")} Â· #{@post.upvotes.count} upvotes. 
              %br/
            %post_title 
              = @post.title
            %post_tags 
              Tags:
              = join_tags(@post)
            %post_body 
              = simple_format @post.body
            - if true
              - vote = Upvote.new post_id: @post.id
              = form_for vote, url: post_upvotes_path(post_id: @post.id), remote: true do |f|
                = f.hidden_field :user_id, value: current_user.id
                = f.submit 'Upvote', class: 'upvote-submit'
        .row
          .col-md-12
            = render 'comments/index', comments: @post.comments
            

