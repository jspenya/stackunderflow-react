<div class="container">
	<p id="notice"><%= notice %></p>

	<p>
	  <strong>Comment:</strong>
	  <%= @comment.body %>
	</p>

	<p>
	  <strong>User:</strong>
	  <%= @comment.user_id %>
	</p>

	<p>
	  <strong>Post:</strong>
	  <%= @comment.post_id %>
	</p>

		<%= render 'replies/index', replies: @comment.replies %>
		<%= render 'replies/form', reply: Reply.new , comment_id: @comment.id %>

	<%= link_to 'Back', post_path(@comment.post_id) %>
</div>