.container
  %p#notice= notice
  %p
    %strong Comment:
    = @comment.body
  %p
    %strong User:
    = @comment.user_id
  %p
    %strong Post:
    = @comment.post_id
  %p
    Commented On #{@comment.created_at.strftime("%B %d %Y, %l:%M%P")}
  = render 'replies/index', replies: @comment.replies
  = render 'replies/form', reply: Reply.new , comment_id: @comment.id
  = link_to 'Back', post_path(@comment.post_id)
